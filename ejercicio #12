class Empleado:
    def __init__(self, horas, valor_hora, porcentaje_retencion):
        self.horas = horas
        self.valor_hora = valor_hora
        self.porcentaje_retencion = porcentaje_retencion
    def salario_bruto(self):
        return self.horas * self.valor_hora
    def retencion_fuente(self):
        return self.salario_bruto() * self.porcentaje_retencion / 100
    def salario_neto(self):
        return self.salario_bruto() - self.retencion_fuente()
empleado = Empleado(48, 5000, 12.5)
print("Salario bruto:", empleado.salario_bruto())
print("Retenci√≥n en la fuente:", empleado.retencion_fuente())
print("Salario neto:", empleado.salario_neto())
